<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:maxWidth="@+id/custom_toolbar__root"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/primary_black"
    android:elevation="@dimen/dp4"
    android:fitsSystemWindows="true"
    app:layout_collapseMode="pin"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:subtitleTextColor="@color/white"
    app:titleTextColor="@color/white">

    <ImageView
        android:id="@+id/custom_toolbar__icon"
        android:layout_width="@dimen/dp30"
        android:layout_height="@dimen/dp30"
        android:background="@color/white"
        android:src="@drawable/ic_icon"
        app:layout_constraintBottom_toBottomOf="@id/custom_toolbar"
        app:layout_constraintStart_toStartOf="@id/custom_toolbar"
        app:layout_constraintTop_toTopOf="@id/custom_toolbar" />

    <TextView
        android:id="@+id/custom_toolbar__title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/title"
        android:textColor="@color/white"
        android:paddingStart="@dimen/dp20"
        android:paddingEnd="@dimen/dp20"
        android:textSize="@dimen/sp20"
        app:layout_constraintStart_toEndOf="@id/custom_toolbar__icon"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.appcompat.widget.Toolbar>
